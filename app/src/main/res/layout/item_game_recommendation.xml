<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/game_recommendation_item_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/search_hot_1" />

    <TextView
        android:id="@+id/game_recommendation_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="5dp"
        android:text="hello" />

    <Button
        android:id="@+id/game_recommendation_item_button"
        android:layout_width="64dp"
        android:layout_height="26dp"
        android:background="@drawable/bg_button_circle"
        android:textSize="@dimen/sp_12"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:textColor="@color/colorPrimary"
        android:text="下载"/>

</LinearLayout>
